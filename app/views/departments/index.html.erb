<div class="container">
<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department ,class: 'btn'%></td>
       
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_department_path,class: 'btn' %>
</div>