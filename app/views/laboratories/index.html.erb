<div class="container">
<p id="notice"><%= notice %></p>

<h1>Laboratórios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Departamento</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td><%= laboratory.name %></td>
        <td><%= Department.find(laboratory.department_id).name %></td>
        <% if laboratory.user_id != nil %>
          <td><%= Laboratory.find(laboratory.user_id).name %></td>
        <% else %>
          <td>Usuário não definido</td>
        <% end %>
        <td><%= link_to 'Show', laboratory,class: 'btn' %></td>
        <td><%= link_to 'Destroy', laboratory, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Voltar',main_adm_path,class: 'btn' %>
<%= link_to 'Novo Laboratório', new_laboratory_path, class: 'btn' %>
</div>